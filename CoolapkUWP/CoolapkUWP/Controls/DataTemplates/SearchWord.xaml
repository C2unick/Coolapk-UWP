<ResourceDictionary
    x:Class="CoolapkUWP.Controls.DataTemplates.SearchWord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoolapkUWP.Controls.DataTemplates"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <local:SearchTemplateSelector x:Key="SearchWordSelector" SearchWord="{StaticResource SearchWord}" />

    <DataTemplate x:Key="SearchWord">
        <StackPanel Orientation="Horizontal">
            <SymbolIcon Symbol="{Binding Symbol}" />
            <TextBlock Margin="10,0" Text="{Binding Title}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
