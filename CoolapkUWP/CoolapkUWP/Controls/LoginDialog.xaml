<ContentDialog
    x:Class="CoolapkUWP.Controls.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CoolapkUWP.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="手动登录"
    CloseButtonText="取消"
    DefaultButton="Primary"
    PrimaryButtonText="登录"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBox Header="UID" Text="{x:Bind UID, Mode=TwoWay}" />
        <TextBox Header="Username" Text="{x:Bind UserName, Mode=TwoWay}" />
        <TextBox Header="Token" Text="{x:Bind Token, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
